{
    "version": "1.0",
    "name": "liraui/auth",
    "description": "An authentication package for LiraUi.",
    "keywords": [
        "laravel",
        "liraui",
        "authentication"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ahsan Zia",
            "email": "ahsan@liraui.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "inertiajs/inertia-laravel": "^2.0.10",
        "jenssegers/agent": "^2.6",
        "laravolt/avatar": "^6.3.1",
        "laravel/wayfinder": "^0.1.12",
        "pragmarx/google2fa": "^9.0",
        "spatie/laravel-route-attributes": "^1.25"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^10.8",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "LiraUi\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiraUi\\Auth\\Tests\\": "tests/",
            "App\\Models\\": "tests/App/Models/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "pint": "vendor/bin/pint",
        "stan": "vendor/bin/phpstan analyse --memory-limit 256m"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LiraUi\\Auth\\AuthServiceProvider"
            ]
        },
        "npm": {
            "dependencies": {
                "qrcode.react": "^4.2.0",
                "@laravel/vite-plugin-wayfinder": "^0.1.3"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
